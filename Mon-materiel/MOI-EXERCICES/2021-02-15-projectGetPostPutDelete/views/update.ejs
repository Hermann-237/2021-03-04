    <script>
      const articleNo = document.getElementById("articleNo");
      const name = document.getElementById("name");
      const description = document.getElementById("description");
      const price = document.getElementById("price");
      const resp = document.getElementById("resp");
      const form = document.getElementById('form')
      form.addEventListener("submit",(e)=>{
        e.preventDefault();
        if(articleNo.value == "") resp.innerHTML ="fill the article Number"
        else if(name.value == "") resp.innerHTML ="fill the Product name"
        else if(description.value == "") resp.innerHTML ="fill the Description"
        else if(price.value == "") resp.innerHTML ="fill the Price"
        else form.submit()
        
      })
